{
  "name": "react-ui-library-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/ui-library",
    "packages/showcase"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:showcase": "npm run dev --workspace=packages/showcase",
    "build:showcase": "npm run build --workspace=packages/showcase",
    "build:lib": "npm run build --workspace=packages/ui-library",
    "publish:lib": "npm run build:lib && npm publish --workspace=packages/ui-library --access public",
    "lint": "eslint ."
  },
  "dependencies": {
    "lucide-react": "^0.546.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@tailwindcss/vite": "^4.1.17",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "vite": "^7.1.7"
  }
}
